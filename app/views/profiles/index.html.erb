<p id="notice"><%= notice %></p>

<div class="col-12 col-md-6 px-2">
    <h2><%= current_user.name %></h2>
    <h3><%= current_user.role.name %></h3>
    <h4><%= current_user.email %></h4>
</div>

<div class="row">
    <div class="px-4 mt-4 col-12 col-md-6">
        <h4>Ordenes Asignadas</h4>
        <table>
            <thead>
                <tr>
                <th>Id</th>
                <th>Fecha y hora:</th>
                <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @orders.each do |order| %>
                    <% if order.status == "Asignada" %>
                    <tr>
                        <td><%= order.id %></td>
                        <td><%= order.scheduled_at.strftime("%d-%m-%Y %H:%M") %></td>
                        <td><%= link_to 'Show', order %></td>
                        <td><%= link_to 'Edit', edit_order_path(order) %></td>
                    </tr>
                    <% end %>
                <% end %>
            </tbody>
        </table>
    </div>

    <div class="px-4 mt-4 col-12 col-md-6">
        <h4>Ordenes Cerradas</h4>
        <table>
            <thead>
                <tr>
                <th>Id</th>
                <th>Fecha y hora:</th>
                <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @orders.each do |order| %>
                    <% if order.status == "Terminada" %>
                    <tr>
                        <td><%= order.id %></td>
                        <td><%= order.scheduled_at.strftime("%d-%m-%Y %H:%M") %></td>
                        <td><%= link_to 'Show', order %></td>
                    </tr>
                    <% end %>
                <% end %>
            </tbody>
        </table>
    </div>

</div>