<h1>Home#index</h1>

<% if user_signed_in? %>
    <div class="row">
        <div class="col-12 col-md-3 mt-4">
            <h3>Buscar ordenes</h3>
            <%= search_form_for @q do |f| %>
                <div class="form-group">
                    <%= f.label :status %>
                    <%= f.select :status_eq, options_for_select(@statuses), class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :rut_del_cliente %>
                    <%= f.search_field :client_rut_eq, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label "Fecha de orden (desde)" %>
                    <%= f.date_field :scheduled_at_gteq, class: "form-control" %>
                    <%= f.label "Fecha de orden (hasta)" %>
                    <%= f.date_field :scheduled_at_lteq, class: "form-control" %>
                </div>
                <%= f.submit "Search", class: "btn btn-primary" %>
            <% end %>
        </div>
    </div>
<% end %>