<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Estado</th>
      <th>Rut</th>
      <th>Nombre(s)</th>
      <th>Apellido(s)</th>
      <th>Fecha y hora</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.status %></td>
        <td><%= order.client.rut %></td>
        <td><%= order.client.first_name %></td>
        <td><%= order.client.last_name %></td>
        <td><%= order.scheduled_at.strftime("%d-%m-%Y %H:%M") %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

