<div class="row">
  <div class="col-12 px-3">
    <div class="row">
      <div class="col-7 col-md-10">
        <h2 class="ml-2">Clientes</h2>
      </div>
      <div class="col-5 col-md-2 btn_new">
        <%= link_to 'Crear cliente', new_client_path, class: "btn btn-secondary" %>
      </div>
    </div>
    <table>
      <thead>
        <tr>
          <th>Nombre(s)</th>
          <th>Apellido(s)</th>
          <th>Rut</th>
          <th class="d-none d-sm-table-cell">Email</th>
          <th class="d-none d-sm-table-cell">Teléfono</th>
          <th class="d-none d-sm-table-cell">Dirección</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @clients.each do |client| %>
          <tr>
            <td><%= client.first_name %></td>
            <td><%= client.last_name %></td>
            <td><%= client.rut %></td>
            <td class="d-none d-sm-table-cell"><%= client.email %></td>
            <td class="d-none d-sm-table-cell"><%= client.phone %></td>
            <td class="d-none d-sm-table-cell"><%= client.address.full_address %></td>
            <td><%= link_to 'Ver', client %></td>
            <td class="d-none d-sm-table-cell"><%= link_to 'Editar', edit_client_path(client) %></td>
            <td class="d-none d-sm-table-cell"><%= link_to 'Eliminar', client, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Nuevo cliente', new_client_path %>

  </div>
</div>
